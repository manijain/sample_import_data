<div class="jumbotron">
  <div class="col-sm-6">
    <h3>You can import CSV file</h3><hr/>
    <%= form_tag import_employees_companies_path, multipart: true do %>
      <div class="form-group">
        <%= label_tag :company_id, "Company name" %>
        <%= select_tag :company_id, options_from_collection_for_select(@companies, "id", "name"), class: "form-control col-sm-6" %>
      </div>
      <div class="form-group">
        <%= label_tag :file, "Attach Employee CSV" %>
        <%= file_field_tag :file, class: "form-control-file", id: "exampleFormControlFile1" %>
      </div>
      <%= submit_tag "Import CSV", class: "btn btn-primary" %>
      <%= link_to "Employee Lists", employees_path %>
    <% end %>
  </div>
</div>